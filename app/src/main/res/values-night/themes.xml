<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_dark_theme</item>
        <item name="colorPrimaryVariant">@color/primary_dark_theme_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_dark_theme</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_theme_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.MyApp.Button.Dark</item>
        <item name="materialCardViewStyle">@style/Widget.MyApp.CardView.Dark</item>
        <item name="bottomNavigationStyle">@style/Widget.MyApp.BottomNavigation.Dark</item>
    </style>

    <!-- Component styles for dark theme -->
    <style name="Widget.MyApp.Button.Dark" parent="Widget.MyApp.Button">
        <item name="backgroundTint">@color/primary_dark_theme</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.MyApp.CardView.Dark" parent="Widget.MyApp.CardView">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="rippleColor">@color/ripple_color_dark</item>
    </style>

    <style name="Widget.MyApp.BottomNavigation.Dark" parent="Widget.MyApp.BottomNavigation">
        <item name="itemIconTint">@color/bottom_nav_colors_dark</item>
        <item name="itemTextColor">@color/bottom_nav_colors_dark</item>
        <item name="itemRippleColor">@color/ripple_color_dark</item>
    </style>
</resources>